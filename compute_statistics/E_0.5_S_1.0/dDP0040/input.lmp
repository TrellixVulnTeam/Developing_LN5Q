# TIP4P water box benchmark
 
clear

#
# step interval for outputs

variable 	forc0 equal 0.040

variable	myThermo equal 1000
variable	myRestart equal 1000000
variable        myImage equal 1000
variable        myDumpV equal 10000
variable        myDump equal 10000

variable        myStepsEach equal 10000
variable        myLoop loop 1000

units		lj	
atom_style	full
boundary p p p

read_data	mt.data
#read_restart	init.0

##########################################################
#setting interaction parameter
include ../in.interaction
##########################################################

# minimize potential of system
minimize 0.0 0.0 100 100

# set parameters of Varlet neighbor lis
neighbor        0.5 bin
neigh_modify	every 1 delay 10 check yes

##########################################################
#setting geometry
include ../in.geom
##########################################################

# set velocities of particles
velocity	all create 1.0 123456 dist gaussian

# set time step
reset_timestep 0
timestep	0.005
run_style	verlet

# set time steps of recording restart file
restart		${myRestart} ./particle/restart.*

##############################################################
# output imagefiles
#dump mydumpImage all image ${myImage} ./image/*.jpg type type  zoom 1.2 view 60 60
#dump_modify mydumpImage adiam 1 0.2
#dump_modify mydumpImage adiam 2 0.2
#dump_modify mydumpImage adiam 3 1.3
#dump_modify mydumpImage adiam 4 1.6
#dump_modify mydumpImage adiam 6 1.6
#dump_modify mydumpImage acolor 3 orange

##############################################################
# set display format for thermodynamic quantities
thermo	        ${myThermo}
#thermo_style	multi 
thermo_modify	format float %25.15f lost warn

##########################################################
fix adf0 gSolu addforce v_forc0 0.0 0.0
fix adf1 gSolv addforce v_forc1 0.0 0.0
fix adfp gPoly addforce v_forcp 0.0 0.0 
##########################################################

##########################################################
#setting computation
include ../in.computations
##########################################################

#fix pin all momentum 1 linear 1 0 0
#fix rig gPoly rigid single
fix              3 all nvt temp 1.0 1.0 1.0
#fix             3 all npt temp 1.0 1.0 0.2 y ${P0} ${P0} 5.0
#fix_modify      3 temp tempsol

##########################################################
# set output
thermo_style custom step c_tempcal c_comPoly[1] v_vx_relative v_Ftotal v_FBulk v_rRe c_rRg v_forcp 
fix pos all ave/time 1 1 100 c_comPoly[1] c_comPoly[2] c_comPoly[3] file "./pos.dat"
fix cal1 all ave/time 1 1000 1000  v_vx_relative c_vx_poly c_vx_sol v_rRe2 v_rRg2 v_conc_bulk v_frac_bulk file "./vdata.dat"

#dump da1 all atom ${myDumpV} dump.atom
dump da2 all custom ${myDump} ./conf/dumpfile*.gz id type x y z ix iy iz vx vy vz
dump poly gPoly custom ${myDumpV} poly.atom id type x y z ix iy iz
##########################################################


label loop

run		${myStepsEach}

#unfix rig
#unfix 3
variable zDis equal -(c_comPoly[3]-v_lhalf)
displace_atoms all move 0 0 v_zDis units box
#fix rig gPoly rigid single
#fix             3 all npt temp 1.0 1.0 0.2 y ${P0} ${P0} 5.0
#run		${mySteps}

next myLoop
jump SELF loop

#write_data conf.data nocoeff

clear
